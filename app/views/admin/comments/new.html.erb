<html>
        <head>
                <title>Add a comment</title>
        </head>

        <body>
                <h1>Add a comment</h1> 
                <% form_for([@comment.article, @comment]) do |f| %>
                <p> <%= f.error_messages %> </p>
                <p>
                        <%= f.label :author %> <br />
                        <%= f.text_field :author %>
                </p>
                <p>
                        <%= f.label :content %> <br />
                        <%= f.text_area :content %>
                </p>
                <p>
                        <%= f.submit 'Post' %>
                </p>
               <% end %>
	       <%= link_to 'Cancel', admin_article_path(@comment.article) %>
        </body>
</html>

